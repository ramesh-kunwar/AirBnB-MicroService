generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Booking {
  id            Int           @id @default(autoincrement())
  userId        Int
  hotelId       Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  bookingAmount Int
  status        BookingStatus
  totalGuests   Int
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
