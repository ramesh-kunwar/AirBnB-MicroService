generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Booking {
  id            Int           @id @default(autoincrement())
  userId        Int
  hotelId       Int
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  bookingAmount Int
  status        BookingStatus @default(PENDING)
  totalGuests   Int
}

model IdempotencyKey {
  id        Int      @id @default(autoincrement())
  key       Int      @unique // going to contain booking id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
